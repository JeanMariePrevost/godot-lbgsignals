[*.cs]
root = true

# Brace style (same-line)
csharp_new_line_before_open_brace    = none
csharp_new_line_before_else          = false
csharp_new_line_before_catch         = false
csharp_new_line_before_finally       = false

# Formatting
max_line_length                      = 180
trim_trailing_whitespace             = true
insert_final_newline                 = true

# Naming rules
dotnet_naming_rule.interface_names_required.severity = error  # interfaces start with “I”

# Disabled analyzer rules
dotnet_diagnostic.CA1051.severity    = none    # allow public instance fields
dotnet_diagnostic.IDE0008.severity   = none    # don’t force explicit types
dotnet_diagnostic.CA2201.severity    = none    # allow general Exception throws
dotnet_diagnostic.IDE0058.severity   = none    # ignore unused return values
dotnet_diagnostic.IDE0011.severity   = none    # allow single-line if statements

# Suggestions (weaker than warnings)
dotnet_diagnostic.IDE0060.severity   = suggestion  # unused parameter
dotnet_diagnostic.IDE0035.severity   = suggestion  # unreachable code
dotnet_diagnostic.CS0162.severity    = suggestion  # unreachable code (CS0162)
dotnet_diagnostic.IDE0046.severity   = suggestion  # simplify conditional

# Warnings
dotnet_diagnostic.IDE1006.severity   = warning     # naming convention violations
